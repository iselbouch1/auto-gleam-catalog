# Registry Configuration
REGISTRY=registry.example.com/auto-gleam
TAG=latest

# Application Backend
APP_NAME="Auto Gleam"
APP_ENV=production
APP_KEY=base64:CHANGEME_32_CHARS_KEY_HERE
APP_DEBUG=false
APP_URL=https://auto-gleam.com

# Frontend CORS
FRONT_ORIGIN=https://auto-gleam.com

# Database (Production)
DB_CONNECTION=mysql
DB_HOST=db.auto-gleam.com
DB_PORT=3306
DB_DATABASE=auto_gleam_prod
DB_USERNAME=auto_gleam
DB_PASSWORD=SUPER_SECURE_DB_PASSWORD

# Cache & Sessions (Production Redis)
REDIS_HOST=redis.auto-gleam.com
REDIS_PASSWORD=SUPER_SECURE_REDIS_PASSWORD
REDIS_PORT=6379
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Storage (S3/Cloudflare R2)
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=YOUR_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_SECRET_ACCESS_KEY
AWS_DEFAULT_REGION=auto
AWS_BUCKET=auto-gleam-storage
AWS_URL=https://storage.auto-gleam.com
AWS_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com

# Mail Service (Production SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=YOUR_MAILGUN_USERNAME
MAIL_PASSWORD=YOUR_MAILGUN_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="contact@auto-gleam.com"
MAIL_FROM_NAME="${APP_NAME}"

# WebSocket Production (Reverb)
REVERB_APP_ID=prod-auto-gleam-app-id
REVERB_APP_KEY=PROD_SECURE_RANDOM_KEY_32_CHARS
REVERB_APP_SECRET=PROD_SECURE_RANDOM_SECRET_64_CHARS
REVERB_HOST=ws.auto-gleam.com
REVERB_PORT=443
REVERB_SCHEME=https

# Pusher Compatible (pour le frontend)
PUSHER_APP_ID="${REVERB_APP_ID}"
PUSHER_APP_KEY="${REVERB_APP_KEY}"
PUSHER_APP_SECRET="${REVERB_APP_SECRET}"
PUSHER_HOST="${REVERB_HOST}"
PUSHER_PORT="${REVERB_PORT}"
PUSHER_SCHEME="${REVERB_SCHEME}"